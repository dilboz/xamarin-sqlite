<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.LoginView">
    
    <ContentPage.Content>
        <StackLayout>
           
            <Entry x:Name="EMail" Placeholder="e-Mail"></Entry>
            <Entry x:Name="Password" IsPassword="True" Placeholder="password"></Entry>
            <Button Text="►Next►" Clicked="GetUsers"></Button>
            
            <Label x:Name="AnswerLog"></Label>
            
        </StackLayout>
        
    </ContentPage.Content>
    
    
</ContentPage>
